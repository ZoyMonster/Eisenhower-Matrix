{
  "name": "eisenhower-matrix",
  "version": "1.0.0",
  "description": "艾森豪威尔矩阵 - 工作日报管理",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:dmg": "electron-builder --mac dmg"
  },
  "keywords": [
    "eisenhower",
    "matrix",
    "todo",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.eisenhower.matrix",
    "productName": "艾森豪威尔矩阵",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "build/icon.icns",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!build/**/*",
      "!*.md",
      "!package-lock.json"
    ]
  }
}

